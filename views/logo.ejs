<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#008B8B">

    <title>Logo</title>

    <style>
      /* Style for the image */
      #randomImage {
          max-width: 100%;
          height: auto;
          display: block;
          margin: 0 auto;
      }
  </style>
  

    <script>
        setTimeout(function() {
            window.location.href = "/";
        }, 1000);
    </script>
</head>

  
  <body>
    <h1> Moving ... </h1>  

    <div id="imageContainer" style="text-align: center; border: 2px solid #008B8B; padding: 10px;">
      <% if (tokenAwarded) { %>
        <img src="/token.gif" alt="Token Awarded">
      <% } else { %>
        <img id="randomImage" src="/NXRX.gif" alt="Moving ...">
      <% } %>
  </div>
  
  
    

    <script>
        // Step 1: Prepare an array of your image filenames
        const images = [
            "/NXRX.gif",
            "/cat.gif",
            "/MrF.gif",
            "/penguin.gif",
            "/beatles.gif",
            "/eben.jpg"
        ];

        // Step 2: Randomly select an index from that array
        const randomIndex = Math.floor(Math.random() * images.length);

        // Step 3: Use that index to select a filename
        const selectedImage = images[randomIndex];

        // Step 4: Update the src attribute of your image element with the selected filename
        document.getElementById("randomImage").src = selectedImage;
    </script>



    <script>
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('/service-worker.js')
        .then(function(registration) {
          console.log('Service Worker registered with scope:', registration.scope);
        })
        .catch(function(error) {
          console.error('Service Worker registration failed:', error);
        });
      }
      </script>
    

  </body>

</html>