<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Token Page</title>
    <link rel="manifest" href="manifest.json" />  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta name="theme-color" content="#008B8B">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            color: white; 
            background-color: #333; 
            font-family: Arial, sans-serif;
        }
        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255, 255, 255, 1)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }
        table {
            border-collapse: collapse;
            color: white;
        }
        th, td {
            border: 1px solid white;
            padding: 5px;
        }
    </style>
</head>
<body class="bg-dark">
    <nav class="navbar">
     
        <div class="container-fluid">
          
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item text-white">
                
                    <form action="/" method="get">
                      <button type="submit" class="nav-link btn btn-link text-white">Home</button>
                    </form>
                  </li>

                  <li class="nav-item text-white">
                
                    <form action="/lead" method="get">
                      <button type="submit" class="nav-link btn btn-link text-white">Lead Aprons</button>
                    </form>
                  </li>

             
              <li class="nav-item">
                <form action="/rosterset" method="get">
                  <button type="submit" class="nav-link btn btn-link text-white">Roster</button>
                </form>
              </li>
              <li class="nav-item">
                <form action="/token" method="get">
                  <button type="submit" class="nav-link btn btn-link text-white">Tokens</button>
                </form>
              </li>
           
            </ul>
          </div>
        </div>
      </nav> 
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-10">
                <h3 class="text-center text-white">Token table</h3>
                <table border="1">
                    <tr>
                        <th>User Name</th>
                        <th>Token Count</th>
                    </tr>
                    <% tokenData.forEach(userToken => { %>
                        <tr>
                            <td><%= userToken.userName %></td>
                            <td><%= userToken.tokenNumber %></td>
                        </tr>
                    <% }) %>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
