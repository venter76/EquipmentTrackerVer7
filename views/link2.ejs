<body class="bg-dark">

    <div class="container">
        <h3 class="text-center text-white">Noticeboard:</h3>
        
        <form action="/link2" method="POST">
          <div class="container">
            <label for="postInput"></label>
            <textarea id="postInput" name="textParagraph" class="bg-info-subtle" style="width: 100%; height: 100px; vertical-align: top;" onKeyDown="if(event.keyCode===13 && !event.shiftKey) return false;"></textarea>

            <!-- <textarea id="postInput" name="textParagraph" style="width: 100%; height: 100px; vertical-align: top;" onKeyDown="if(event.keyCode===13 &amp;&amp; !event.shiftKey) return false;"></textarea> -->
          </div>
          <br>
          <button type="submit">Add post</button>
        </form>
      </div>
      
    



   


      <div class="container">
        <br>
        <br>
        <h3 class="text-center">Previous Notices:</h3>
        <ul>
          <% documents.reverse().forEach(function(doc) { %>
          <li class="mb-4 ml-2">
            <div class="p-3 mb-2 bg-info-subtle text-black rounded-pill pill-box">
              <%= doc.text %>
            </div>
            <form action="/deletePost" method="POST" style="display:inline;">
                <input type="hidden" name="text" value="<%= doc.text %>">
              <button type="submit" class="btn btn-outline-secondary btn-sm">Remove</button>
            </form>
          </li>
          <% }); %>
        </ul>
      </div>
      
      
     
  
    
    
