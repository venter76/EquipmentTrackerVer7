</head>
<header>
    <div class="header-container">
        <div class="row">
          <div class="col-2 col-md-2">
            <i class='fas fa-syringe' style='font-size:35px;color:red; padding: 4vh 2vw 3vh;'></i>
            </div>
            <div class="col-7 col-md-6">
                <h6 class="display-2" style="color: rgb(152, 216, 170);">DACCtracker</h6>
                <h6>
                    <small class="text-body-secondary" style="color: rgb(152, 216, 170); padding-left: 20vw;">Track your equipment</small>
                </h6>
                </div>
            </div>
        </div>
    </div>
</header>



<body>
    

<div class="container mt-5">
    <h1>Login</h1>
  
    <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
      <div class="alert alert-danger">
          <%= error[0] %>  <!-- Displaying the first error message -->
      </div>
  <% } %>
  
    <div class="row">
      <div class="col-sm-8">
        <div class="card mb-4">
          <div class="card-body mb-4">
  
            <!-- Inside your existing form -->
<form action="/login" method="POST">
    <div class="form-group">
      <label for="firstname">First Name</label>
      <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="form-group">
      <label for="surname">Surname</label>
      <input type="text" class="form-control" id="surname" name="surname" required>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" required>
    </div>
    <br>
    <button type="submit" class="btn btn-dark">Login</button>
  </form>

  </div>
  </div>
  </div>
  </div>

  <script>
    function sanitizeInput() {
      var nameInput = document.getElementById('name');
      var surnameInput = document.getElementById('surname');
  
      nameInput.value = capitalizeFirstLetter(nameInput.value.trim());
      surnameInput.value = capitalizeFirstLetter(surnameInput.value.trim());
    }
  
    function capitalizeFirstLetter(string) {
      return string.charAt(0).toUpperCase() + string.slice(1).toLowerCase();
    }
  
    // Attach the sanitize function to the form submission
    document.querySelector('form').addEventListener('submit', sanitizeInput);
  </script>
  

</body>
</html>